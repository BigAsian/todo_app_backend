<h1>ToDos</h1>
        <u1 style="list-style: none">
            <% @todos.each do |todo| %>
            <li>
                <input type="checkbox">
                <a href="show/<%= todo.id %>"><%= todo.description %></a>
                <span class="hour-estimate"><%= todo.time_estimate %></span>
            </li>
            <% end %>
        </u1>
        <div id="new-todo-block">
            <a href="/todo/new">
                <div><input id="add-todo-button" type="submit" value="Add todo">
                </div></a>
        </div>